{
  "name": "idmxppm-neo-seoul",
  "version": "1.2.1",
  "description": "IDMxPPM - Neo Seoul: Information Delivery Manual authoring tool based on the eXtended Process to Product Modeling method. Cross-platform IDM authoring tool for AEC industry - ISO 29481-1 & ISO 29481-3 compliant",
  "main": "electron/main.js",
  "author": "Building Informatics Group (BIG), Yonsei University",
  "license": "GPL-3.0-or-later",
  "homepage": "http://big.yonsei.ac.kr",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "icons": "node scripts/generate-icons.js",
    "prebuild:win": "npm run icons",
    "prebuild:mac": "npm run icons",
    "prebuild:all": "npm run icons",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux",
    "build:all": "vite build && electron-builder --win --mac --linux"
  },
  "dependencies": {
    "bpmn-js": "^18.10.1",
    "jszip": "^3.10.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^8.2.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.2",
    "typescript": "^5.5.0",
    "vite": "^7.3.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "kr.ac.yonsei.big.idmxppm-neo-seoul",
    "productName": "IDMxPPM - Neo Seoul",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "public",
        "to": "public",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png",
      "category": "Development",
      "maintainer": "Building Informatics Group (BIG), Yonsei University <big@yonsei.ac.kr>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "IDMxPPM Neo Seoul"
    },
    "dmg": {
      "title": "IDMxPPM - Neo Seoul",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
